<%- include header %>
<div id="wrap">
    <div class="container">
        <div class="row" style="height: 50px;">

        </div>
        <div class="row">
            <div class="col-md-4" style="height: 50px;">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">管理中心</h3>
                    </div>
                    <div class="panel-body">

                    </div>
                    <ul class="list-group">
                        <li class="list-group-item">发布文章</li>
                        <li class="list-group-item">所有文章</li>
                        <li class="list-group-item">用户中心</li>
                        <li class="list-group-item">最近流量</li>
                        <li class="list-group-item">等等</li>
                    </ul>
                </div>
            </div>
            <div class="col-md-7">
               <form role="form" method="post" action="/post" enctype="multipart/form-data">
                   <div class="form-group">
                       <label for="acticle_title">文章标题</label>
                       <input type="text" class="form-control" id="acticle_title" name="title" placeholder="请输入标题" required>
                   </div>
                   <div class="form-group">
                       <label for="acticle_desc">文章描述</label>
                       <input type="text" class="form-control" id="acticle_desc" name="desc" placeholder="文章描述" required>
                   </div>
                   <div class="form-group">
                       <label for="tags">标签</label>
                       <input type="text" class="form-control" id="tags" name="tags" placeholder="以空格分割" required>
                   </div>
                   <div class="form-group">
                       <label for="acticle_img">文章缩略图</label>
                       <input type="file" id="acticle_img" name="thumbnail">
                       <p class="help-block"></p>
                   </div>
                   <script type="text/plain" id="myEditor" name="myContent">
                       <p>文章内容</p>
                   </script>
                   <div class="col-md-offset-11" style="margin-top: 10px;">
                       <button type="submit" class="btn btn-success pull-right" id="complete">完成</button>
                   </div>
               </form>
            </div>
        </div>
    </div>
</div>
<%- include footer %>
</body>
<script type="text/javascript" src="javascripts/sea-modules/seajs/seajs/2.1.1/sea.js"></script>
<script type="text/javascript" src="javascripts/sea-modules/config.js"></script>
<script>
    seajs.use(['post', 'header','bootstrap'], function() { });
</script>
</html>